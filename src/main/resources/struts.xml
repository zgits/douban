<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <constant name="struts.devMode" value="true"/>
    <constant name="struts.objectFactory" value="spring" />

    <constant name="struts.multipart.maxSize" value="50000000"></constant>

    <package name="user" namespace="/" extends="struts-default">


        <action name="insertComment" class="CommentAction" method="insertComment">
            <result name="insert">/success.jsp</result>
        </action>

        <action name="deleteComment" class="CommentAction" method="deleteComment">
            <result name="delete">/success.jsp</result>
        </action>


        <action name="getUsers" class="ManagerUser" method="findAll">
            <result name="findAll">/admin/user.jsp</result>
        </action>

        <!--文件上传-->
        <action name="upload" class="MovieAction" method="saveFile">
            <interceptor-ref name="defaultStack">
            <!--
                修改允许上传文件的大小(默认值是2M),
                将调用FileUploadInterceptor中的setMaximumSize(223434555)
            -->
            <param name="fileUpload.maximumSize">223434555</param>
            <!-- 配置允许上传文件的类型,如果有多个类型用","隔开 -->
            <!--<param name="fileUpload.allowedTypes">application/vnd.ms-excel,text/plain</param>-->
            <!--&lt;!&ndash;配置允许上传文件的扩展名,如果有多个用","隔开  &ndash;&gt;-->
            <!--<param name="fileUpload.allowedExtensions">txt,excel,ppt</param>-->
        </interceptor-ref>
        <result name="success">/success.jsp</result>
        <result name="input">/upload/error.jsp</result>
        </action>


        <!--https://blog.csdn.net/yu0_zhang0/article/details/77984890-->

    </package>

</struts>